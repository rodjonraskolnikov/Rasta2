sqlite> CREATE TABLE papers(
   ...> id_paper integer primary key,
   ...> name varchar,
   ...> path varchar);

sqlite> CREATE TABLE pages(
   ...> number_of_page integer,
   ...> id_paper integer,
   ...> path varchar,
   ...> name varchar,
   ...> id_pages integer primary key,
   ...> FOREIGN KEY(id_paper) REFERENCES papers(id_paper));

sqlite> CREATE TABLE sifts(
   ...> id_sift integer primary key,
   ...> name varchar,
   ...> path varchar,
   ...> id_pages integer,
   ...> FOREIGN KEY(id_pages) REFERENCES pages(id_pages));

